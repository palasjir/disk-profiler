{
  "name": "disk-profiler",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint **/*.{ts,tsx}",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "dev": "run-p 'dev:*'",
    "dev:electron": "electron .",
    "dev:renderer": "webpack --config webpack.config.renderer.js --watch --mode=development",
    "dev:main": "webpack --config webpack.config.main.js --watch --mode=development",
    "build": "yarn build:main && yarn build:renderer",
    "build:renderer": "webpack --config webpack.config.renderer.js --mode=production",
    "build:main": "webpack --config webpack.config.main.js --mode=production",
    "start": "yarn build && electron .",
    "test": "run-s 'test:*'",
    "test:format": "prettier --list-different \"**/*.{ts,tsx}\"",
    "test:lint": "yarn lint",
    "test:unit": "jest",
    "scan": "ts-node ./scripts/scan.ts"
  },
  "devDependencies": {
    "@material-ui/core": "^4.4.2",
    "@material-ui/icons": "^4.4.1",
    "@types/electron": "^1.6.10",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/rimraf": "^2.0.2",
    "@types/styled-components": "^4.1.19",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "clsx": "^1.0.4",
    "electron": "^6.0.8",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.15.1",
    "husky": ">=1",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "lint-staged": ">=8",
    "lodash": "^4.17.15",
    "mobx": "^5.13.0",
    "mobx-react": "^6.1.3",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^3.0.0",
    "source-map-loader": "^0.2.4",
    "styled-components": "^4.3.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.2",
    "typescript-plugin-styled-components": "^1.4.3",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8"
  },
  "dependencies": {
    "chokidar": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
